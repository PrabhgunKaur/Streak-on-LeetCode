class Solution {
public:
    bool delExtraChar(const string &s, int left, int right){
        int x;
        while(left<right){
            if(s[left] != s[right]){
                return false;
            }
            left++;
            right--;
        }
        return true;
    }
    bool validPalindrome(string s) {
        int left =0;
        int right = s.length() - 1;
        while(left<right){
            if(s[left] == s[right]){
                left++;
                right--;
            }
            else{
                return delExtraChar(s, left+1, right)||delExtraChar(s, left, right-1);
            }
        }
        return true;
    }
};
