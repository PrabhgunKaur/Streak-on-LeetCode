class Solution {
public:
    vector<int> sortedSquares(vector<int>& nums) {
        int n = nums.size();
        vector<int>nums2(n);
        int i = 0;
        int j = n-1;
        int k = n-1;
        while(i<=j){
            int L = nums[i] * nums[i];
            int R = nums[j] * nums[j];
            if(L<R){
                nums2[k--] = R;
                j--;
            }
            else{
                nums2[k--] = L;
                i++;
            }
        }
        return nums2;
    }
};
