class Solution {
public:
    int mySqrt(int x) {
        if (x < 0) return 0;

        long long low = 0;
        long long high = x;
        long long ans = 0;

        while(low <= high){
            long long mid = low + (high - low) / 2;
            long long sq = mid * mid;

            if (sq == x){
                return (int)mid;
            }
            else if (sq < x){
                ans = mid;
                low = mid + 1;
            }
            else{
                high = mid - 1;
            }
        }
        return (int)ans;
    }
};
